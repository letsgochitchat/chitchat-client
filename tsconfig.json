{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@chitchat/components": ["./src/components"],
      "@chitchat/components/*": ["./src/components/*"],
      "@chitchat/constants": ["./src/constants"],
      "@chitchat/constants/*": ["./src/constants/*"],
      "@chitchat/exceptions": ["./src/exceptions"],
      "@chitchat/exceptions/*": ["./src/exceptions/*"],
      "@chitchat/hooks": ["./src/hooks"],
      "@chitchat/hooks/*": ["./src/hooks/*"],
      "@chitchat/libs": ["./src/libs"],
      "@chitchat/libs/*": ["./src/libs/*"],
      "@chitchat/providers": ["./src/providers"],
      "@chitchat/providers/*": ["./src/providers/*"],
      "@chitchat/store": ["./src/store"],
      "@chitchat/store/*": ["./src/store/*"],
      "@chitchat/styles": ["./src/styles"],
      "@chitchat/styles/*": ["./src/styles/*"],
      "@chitchat/types": ["./src/types"],
      "@chitchat/types/*": ["./src/types/*"],
      "@chitchat/utils": ["./src/utils"],
      "@chitchat/utils/*": ["./src/utils/*"],
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "@types"],
  "exclude": ["node_modules", "mock-server"]
}
